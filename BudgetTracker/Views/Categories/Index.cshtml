@model List<Category>

@{
    ViewData["Title"] = "Categories Page";
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <tr>
            <th>Category name</th>
            <th>Description</th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td><a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@category.CategoryId">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="categories" asp-action="delete" asp-route-id="@category.CategoryId" onclick="return confirmDelete()">Delete</a></td>
            </tr>
        }
    </table>
}
else
{
    <h5>No categories have been created yet.</h5>
}

<a class="btn btn-primary" href="/categories/create">Create new</a>

@section Scripts{
    <script>
        function confirmDelete(){
            return confirm("Are you sure you want to delete this category ?\n\nATTENTION: The incomes and expenses associated with this category will no longer have one.");
        }
    </script>
}
